{
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "find .github/workflows -type f '(' -name '*.yml' -o -name '*.yaml' ')' -print0 | xargs -0 -t actionlint"
          },
          {
            "type": "command",
            "command": "cd src && golangci-lint fmt --enable=gofumpt --enable=goimports && golangci-lint run --fix"
          }
        ]
      }
    ]
  }
}
